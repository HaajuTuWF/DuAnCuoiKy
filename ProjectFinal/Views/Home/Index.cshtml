<!--PRODUCT-->
<div class="product">
    <div class="product-tittle">
        <h2>SẢN PHẨM HOT</h2>
    </div>
    @foreach (var item in Model.SanPham)
    {
        if (item.ID == 1)
        {
            <div class="product-card">
                <a class="iproduct" href="@Url.Action("AcerAspire7GM", "Acer", new { id = item.ID })">
                    <img src="@item.LinkAnh" alt="@item.TenSp" />
                </a>
                <a href="@Url.Action("AcerAspire7GM", "Acer", new { id = item.ID })">@item.TenSp</a>
                <h2 class="price">@item.GiaSp?.ToString("n0")đ</h2>
                <p>@item.CauHinh1</p>
                <p>@item.CauHinh2</p>
                <button class="btn btn-cart" onclick="location.href='@Url.Action("AcerAspire7GM", "Acer", new { id = item.ID })'">Xem Chi Tiết Sản Phẩm</button>
            </div>
        }
        if (item.ID == 3)
        {
            <div class="product-card">
                <a class="iproduct" href="@Url.Action("Iphone", "Phone", new { id = item.ID })">
                    <img src="@item.LinkAnh" alt="@item.TenSp" />
                </a>
                <a href="@Url.Action("Iphone", "Phone", new { id = item.ID })">@item.TenSp</a>
                <h2 class="price">@item.GiaSp?.ToString("n0")đ</h2>
                <p>@item.CauHinh1</p>
                <p>@item.CauHinh2</p>
                <button class="btn btn-cart" onclick="location.href='@Url.Action("Iphone", "Phone", new { id = item.ID })'">Xem Chi Tiết Sản Phẩm</button>
            </div>
        }
        else
        {
            <div class="product-card">
                <a class="iproduct" href="#">
                    <img src="@item.LinkAnh" alt="@item.TenSp" />
                </a>

                <a href="#">@item.TenSp</a>

                <h2 class="price">@item.GiaSp?.ToString("n0") đ</h2>

                <p>@item.CauHinh1</p>
                <p>@item.CauHinh2</p>

                <button class="btn btn-cart" onclick="location.href='#'">
                    Xem Chi Tiết Sản Phẩm
                </button>
            </div>

        }
    }
</div>
