<style>
    .DM {
    display: inline-flex;
    flex-wrap: wrap;
    gap: 10px;
    width: 1210px;
    margin-top: 5px;
    padding-bottom: 15px;
    }

    .img-box {
    border: 2px solid #000;
    padding: 5px;
    border-radius: 5px;
    transition: .5s ease;
    padding-bottom: 10px;
    }

    .img-box img {
    display: block;
    width: 180px;
    height: 40px;
    }

    .img-box:hover {
    transform: scale(1.05);
    cursor: pointer;
    }
</style>
