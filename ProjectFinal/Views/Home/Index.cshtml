</div>
<div class="layout">
    <div class="slider-container">
        <!-- Slider 1 (Bên trái) -->
        <div class="slider" id="slider1">
            <div class="slides">
                <div class="slide active">
                    <img src="https://pbs.twimg.com/media/GvbD2R6bcAAJ2Uy?format=jpg&name=medium" alt="Hình 1">
                </div>
                <div class="slide">
                    <img src="https://pbs.twimg.com/media/GvbD2jxasAA0JpR?format=jpg&name=medium" alt="Hình 2">
                </div>
                <div class="slide">
                    <img src="https://pbs.twimg.com/media/GvbD2lSWkAA7A1h?format=jpg&name=medium" alt="Hình 3">
                </div>
                <div class="slide">
                    <img src="https://pbs.twimg.com/media/GvbD2IJbIAERT_s?format=jpg&name=medium" alt="Hình 4">
                </div>
            </div>
            <a class="prev" onclick="changeSlide(1, -1)">❮</a>
            <a class="next" onclick="changeSlide(1, 1)">❯</a>
        </div>
        <!-- Slider 2 (Bên phải) -->
        <div class="slider" id="slider2">
            <div class="slides">
                <div class="slide active">
                    <img src="https://pbs.twimg.com/media/GvbD6nhXYAAyeDg?format=jpg&name=medium" alt="Hình 1">
                </div>
                <div class="slide">
                    <img src="https://pbs.twimg.com/media/GvbD7IFa8AAI9Np?format=jpg&name=medium" alt="Hình 2">
                </div>
                <div class="slide">
                    <img src="https://pbs.twimg.com/media/GvbD6iRacAAbLLM?format=jpg&name=medium" alt="Hình 3">
                </div>
                <div class="slide">
                    <img src="https://pbs.twimg.com/media/GvbD8YQaMAA_0J8?format=jpg&name=medium" alt="Hình 4">
                </div>
            </div>
            <button class="prev" onclick="changeSlide(2, -1)">❮</button>
            <button class="next" onclick="changeSlide(2, 1)">❯</button>
        </div>
    </div>
</div>
