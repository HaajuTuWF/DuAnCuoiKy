@{
    ViewData["Title"] = "Đăng Ký";
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Đăng Ký</title>
    <style>
        /* Toàn bộ trang */
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(to right, #74ebd5, #ACB6E5);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        /* Container chung cho login/register */
        .register-container {
            background-color: white;
            padding: 30px 40px;
            border-radius: 12px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            width: 320px;
            text-align: center;
        }

        /* Tiêu đề */
        h2 {
            margin-bottom: 20px;
            color: #333;
        }

        /* Input field */
        input[type="text"],
        input[type="password"] {
            width: 100%;
            padding: 10px 12px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 6px;
            font-size: 16px;
        }

        /* Nút đăng nhập/đăng ký */
        button {
            width: 100%;
            padding: 12px;
            background-color: #007bff;
            color: white;
            font-weight: bold;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 16px;
            margin-top: 10px;
        }

            button:hover {
                background-color: #0056b3;
            }

        /* Thông báo lỗi/thành công */
        p#errorMessage,
        p#registerMessage {
            margin-top: 10px;
            font-size: 14px;
        }

        /* Link chuyển giữa login / register */
        p a {
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
        }

            p a:hover {
                text-decoration: underline;
            }

    </style>
</head>
<body>
    <div class="register-container">
        <h2>Đăng Ký</h2>
        <form id="registerForm">
            <input type="text" id="newUsername" placeholder="Tên đăng nhập" required>
            <input type="password" id="newPassword" placeholder="Mật khẩu" required minlength="6">
            <input type="password" id="confirmPassword" placeholder="Xác nhận mật khẩu" required minlength="6">
            <button type="submit">Đăng ký</button>
            <p id="msg" style="color:green;"></p>
        </form>

        <p>Đã có tài khoản? <a href="@Url.Action("Login", "Home")">Đăng nhập</a></p>
    </div>
    <script>
        document.getElementById("registerForm").addEventListener("submit", function (e) {
            e.preventDefault();

            const username = document.getElementById("newUsername").value.trim();
            const password = document.getElementById("newPassword").value.trim();
            const confirmPassword = document.getElementById("confirmPassword").value.trim();
            const errorMessage = document.getElementById("errorMessage");

            // Kiểm tra client
            if (password.length < 6) {
                errorMessage.textContent = "Mật khẩu phải có ít nhất 6 ký tự.";
                return;
            }

            if (password !== confirmPassword) {
                errorMessage.textContent = "Mật khẩu xác nhận không khớp.";
                return;
            }

            fetch('/Account/Register', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ username, password })
            })
            .then(res => {
                if (!res.ok) throw new Error("Lỗi phản hồi server");
                return res.json();
            })
            .then(data => {
                if (data.success) {
                    alert("Đăng ký thành công!");
                    window.location.href = "@Url.Action("Login", "Home")"; // Chuyển sang trang đăng nhập
                } else {
                    errorMessage.textContent = data.message;
                }
            })
            .catch(err => {
                console.error("Lỗi khi đăng ký:", err);
                errorMessage.textContent = "Không thể kết nối đến máy chủ.";
            });
        });
    </script>

</body>
</html>