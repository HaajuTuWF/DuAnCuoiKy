<body>
    <!--Nav chính-->
    <nav class="navbar">
        <div class="nav-content">
            <div class="logo">
                <a href="@Url.Action("Index", "Home")">
                    <img width="100" height="40"
                         src="https://pbs.twimg.com/media/GvuP4ZxXAAA9CnM?format=png&name=small">
                </a>
            </div>
            <div class="nav-links">
                <div class="search-container">
                    <input type="text" id="searchInput" placeholder="Hãy nhập tên sản phẩm..."><div id="searchResult"></div>
                    <button onclick="searchProduct()"><i class="bi bi-search"></i></button>
                </div>
                <a href="@Url.Action("Index", "Home")"><i class="bi bi-house-door"></i> Trang Chủ</a>
                <a id="adress-form" href="#location"><i class="bi bi-pin-map"></i> Chọn Vùng</a>
                <a href="@Url.Action("Login", "Home")" id="Login"><i class="bi bi-person-circle"></i> Tài Khoản</a>
                <a href="@Url.Action("Cart", "Cart")"><i class="bi bi-basket2"></i> Giỏ Hàng </a>
                <a href="#contact"><i class="bi bi-telephone"></i> Liên Hệ</a>
            </div>
        </div>
    </nav>
    <!-- Nav Phụ -->
