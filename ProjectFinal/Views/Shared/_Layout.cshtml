                                <li><a href="#">CHUỘT</a></li>
                                <li><a href="#">KHÁC...</a></li>
                            </ul>
                        </div>
                    </li>
                    <li><a href="@Url.Action("OldDevice", "ListProduct")"><i class="fa-solid fa-mobile-screen-button"></i> MÁY CŨ GIÁ RẺ </a></li>
                    <li><a href="@Url.Action("PC", "ListProduct")"><i class="fa-solid fa-desktop"></i> PC-MÁY TÍNH BÀN </a></li>
                    <li><a href="@Url.Action("SimCard", "ListProduct")"><i class="fa-solid fa-sim-card"></i> SIM, THẺ CÀO </a></li>
                </ul>
            </div>
        </div>
    </section>
    <!--ADRESSFORM-->
    <div class="adress-form">
        <div class="adress-form-content">
            <h2>Chọn địa chỉ nhận hàng <span id="adress-close">X</span></h2>
            <form action="">
                <p>Quý khách vui lòng cho biết Địa Chỉ Nhận Hàng để biết chính xác thời gian giao hàng</p>
                <select name="" id="">
                    <option value="#">--Chọn tỉnh thành</option>
                    <option value="#">Tp.Hồ Chí Minh</option>
                    <option value="#">Hà Nội</option>
                    <option value="#">null</option>
                    <option value="#">null</option>
                </select>
                <select name="" id="">
                    <option value="#">--Chọn Quận/Huyện</option>
                    <option value="#">null</option>
                    <option value="#">null</option>
                    <option value="#">null</option>
                    <option value="#">null</option>
                </select>
                <select name="" id="">
                    <option value="#">--Chọn Phường/Xã</option>
                    <option value="#">null</option>
                    <option value="#">null</option>
                    <option value="#">null</option>
                    <option value="#">null</option>
                </select>
                <input type="text" placeholder="Số Nhà, Tên Đường">
                <button><b>Xác Nhận</b></button>
            </form>
        </div>
    </div>
    <div class="content">
        @RenderBody()
    </div>
