                        <a href="@Url.Action("LapTop", "ListProduct")"><i class="fa-solid fa-laptop"></i> LAPTOP <i class="fa-solid fa-caret-down"></i></a>
                        <div class="submenu">
                            <ul>
                                <li><a href="@Url.Action("Acer", "LapTop")">ACER</a></li>
                                <li><a href="#">ASUS</a></li>
                                <li><a href="#">MSI</a></li>
                                <li><a href="#">MACBOOK</a></li>
                                <li><a href="#">LENOVO</a></li>
                                <li><a href="#">DELL</a></li>
                            </ul>
                        </div>
                    </li>
                    <li>
                        <a href="@Url.Action("Accessory", "ListProduct")"><i class="fa-solid fa-headphones-simple"></i> PHỤ KIỆN <i class="fa-solid fa-caret-down"></i></a>
                        <div class="submenu">
                            <ul>
                                <li><a href="#">TAI NGHE</a></li>
                                <li><a href="#">CÁP SẠC</a></li>
                                <li><a href="#">LOA</a></li>
